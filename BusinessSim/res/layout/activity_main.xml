<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <!--  The image is not available, remove it temporarily
        android:background="@drawable/lemonade_splash1" -->

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin = "5dp"
        
        android:text="GameController" />
    <Button
        android:id="@+id/chooseGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin = "5dp"
        android:text="Play Game" />

    <Button
        android:id="@+id/howtoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseGameBtn"
        android:layout_centerHorizontal="true"
        android:layout_margin = "5dp"
        
        android:text="How To Play" />

    <Button
        android:id="@+id/glossaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howtoBtn"
        android:layout_centerHorizontal="true"
        android:layout_margin = "5dp"
        android:text="Glossary" />

    <Button
        android:id="@+id/highscoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/glossaryBtn"
        android:layout_margin = "5dp"
        android:text="High Scores" />

</RelativeLayout>